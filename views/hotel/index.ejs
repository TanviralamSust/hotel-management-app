<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/room.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<main>
    <% if (rooms.length > 0) { %>
        <div class="grid">
            <% for (let room of rooms) { %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title">
                            Room no: <%= room.no %>
                        </h1>
                    </header>
                    <div class="card__image">
                        <img src="<%= room.imageUrl %>"
                             alt="<%= room.type %>">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">$ <%= room.price %></h2>
                        <p class="room_type">Type: <%= room.type %></p>
                        <p class="product__description"><%= room.description %></p>
                    </div>
                    <div class="card__actions">
                        <a href="/rooms/<%= room.id %>" class="btn">Details</a>
                        <%- include('../includes/book-room.ejs', {room: room}) %>
                    </div>
                </article>
            <% } %>
        </div>
    <% } else { %>
        <h1>No Rooms Found!</h1>
    <% } %>
</main>
<%- include('../includes/end.ejs') %>