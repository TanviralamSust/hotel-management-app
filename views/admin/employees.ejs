<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/employee.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<main>
    <% if (employees.length > 0) { %>
        <div class="alignCentered">
            <% for (let employee of employees) { %>
                <article class="card employee-item">
                    <header class="card__header">
                        <h1 class="employee__title">
                            <%= employee.name %>
                        </h1>
                    </header>
                    <div class="card__image">
                        <img src="<%= employee.imageUrl %>" alt="<%= employee.title %>">
                    </div>
                    <div class="card__content">
                        <h2 class="employee__price">$
                            <%= employee.price %>
                        </h2>
                        <p class="employee__contactNumber">
                            <%= employee.designation %>
                        </p>
                        <p class="employee__contactNumber">
                            <%= employee.contactNumber %>
                        </p>

                    </div>

                    <div class="card__actions">
                        <a href="/admin/edit-employee/<%= employee.id %>?edit=true" class="btn">Edit</a>
                        <form action="/admin/delete-employee" method="POST">
                            <input type="hidden" value="<%= employee.id %>" name="employeeId">
                            <button class="btn" type="submit">Delete</button>
                        </form>

                    </div>
                </article>
            <% } %>
        </div>
    <% } else { %>
        <h1>No Employees Found!</h1>
    <% } %>
</main>
<%- include('../includes/end.ejs') %>
