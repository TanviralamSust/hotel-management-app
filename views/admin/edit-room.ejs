<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<main>
    <form class="product-form" action="/admin/<% if (editing) { %>edit-room<% } else { %>add-room<% } %>" method="POST">
        <div class="form-control">
            <label for="no">Room No</label>
            <input type="number" name="no" id="no" value="<% if (editing) { %><%= room.no %><% } %>">
        </div>
        <div class="form-control">
            <label for="type">Room Type</label>
            <input type="text" name="type" id="type" value="<% if (editing) { %><%= room.type %><% } %>">
        </div>
        <div class="form-control">
            <label for="price">Room Price</label>
            <input type="number" name="price" id="price" step="100" value="<% if (editing) { %><%= room.price %><% } %>">
        </div>
        <div class="form-control">
            <label for="cap">Room Capacity</label>
            <input type="number" name="cap" id="cap" step="1" value="<% if (editing) { %><%= room.cap %><% } %>">
        </div>
        <div class="form-control">
            <label for="imageUrl">Image</label>
            <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= room.imageUrl %><% } %>">
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea name="description" id="description" rows="5"><% if (editing) { %><%= room.description %><% } %></textarea>
        </div>
        <% if (editing) { %>
            <input type="hidden" value="<%= room.id %>" name="roomId">
        <% } %>

        <button class="btn" type="submit"><% if (editing) { %>Update Room<% } else { %>Add Room<% } %></button>
    </form>
</main>
<%- include('../includes/end.ejs') %>
